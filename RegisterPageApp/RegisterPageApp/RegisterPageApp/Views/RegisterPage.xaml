<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegisterPageApp.Views.RegisterPage"
             Padding="50"
             Title="Registration">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryFirstName" Placeholder="FirstName" Keyboard="Text"/>
            <Entry x:Name="entryLastName" Placeholder="LastName" Keyboard="Text"/>
            <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True"/>
            <Entry x:Name="entryAge" Placeholder="Age" Keyboard="Numeric"/>
            <Picker x:Name="pickerGender" Title="Gender" >
                <Picker.Items>
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                </Picker.Items>
            </Picker>
            <Entry x:Name="entryEmail" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="entryPhone" Placeholder="Phone Number" Keyboard="Telephone"/>
            <CheckBox CheckedChanged="CheckBox_CheckedChanged" VerticalOptions="EndAndExpand"></CheckBox>
            <Label TextColor="Black">I agree to the Terms and Conditions</Label>
            <Button x:Name="BtnSubmit" Text="Submit" Clicked="Button_Clicked" TextColor="White" BackgroundColor="Green" IsEnabled="False"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 